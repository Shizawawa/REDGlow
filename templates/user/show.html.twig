{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <div class="page-wrapper">
        <div class="table-responsive">
            <div class="container-fluid" id="user">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('user_index') }}">back to list</a>

                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

                <a href="#" class="btn btn-danger delete-user" data-id= "{{ user.id }}">Supprimer</a>


            </div>
        </div>
    </div>
{% endblock %}