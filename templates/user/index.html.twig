{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }} | Red Glow{% endblock %}

{% block body %}
    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

  
    <table id="users" class="table table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Username</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td><a class="btn btn-info" href="{{ path('user_show', {'id': user.id}) }}">Plus de d√©tails</a></td>
                <td><a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('user_new') }}">Create new</a>
{% endblock %}