{% extends 'base.html.twig' %}

{% block title %}Modules{% endblock %}

{% block body %}
    <h1>Modules</h1>

   
    <table id="projects" class="table table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Add_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for module in modules %}
            <tr>
                <td>{{ module.id }}</td>
                <td>{{ module.name }}</td>
                <td>{{ module.description }}</td>
                <td>{{ module.addAt ? module.addAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('module_show', {'id': module.id}) }}">show</a>
                    <a href="{{ path('module_edit', {'id': module.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            

    <a class="btn btn-success" href="{{ path('module_new') }}">Create new</a>
{% endblock %}