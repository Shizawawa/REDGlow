{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div id="main-wrapper">
    <!-- Page wrapper  -->
    <div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Tâche : {{ task.name }} </h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
    <!-- Start Page Content -->

    <table class="table">
        <tbody>
            <tr>
                <th>Description </th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Début de la tâche </th>
                <td>{{ task.startAt ? task.startAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin théorique de la tâche </th>
                <td>{{ task.plannedEndAt ? task.plannedEndAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin réelle </th>
                <td>{{ task.endAt ? task.endAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('task_edit', {'id': task.id}) }}">Modifier</a>
        {{ include('task/_delete_form.html.twig') }}

        <a href="{{ path('task_index') }}">Retour à la liste des tâches</a>

    </div>
    </div>
    </div>
    </div>
{% endblock %}